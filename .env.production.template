# BLKOUT Production Environment Configuration
# Copy this file to .env.production and fill in the values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL (IVOR AI Backend)
IVOR_DB_PASSWORD=your_secure_postgresql_password_here
POSTGRES_DB=ivor_db
POSTGRES_USER=ivor_user

# MongoDB (Events & Newsroom)
MONGO_ROOT_PASSWORD=your_secure_mongodb_password_here
MONGO_INITDB_ROOT_USERNAME=admin

# Redis Cache
REDIS_PASSWORD=your_secure_redis_password_here

# =============================================================================
# API KEYS & SECRETS
# =============================================================================

# OpenAI API Key for IVOR AI
OPENAI_API_KEY=sk-your_openai_api_key_here

# JWT Secret for authentication
JWT_SECRET=your_super_secure_jwt_secret_256_bit_key_here

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Configuration for notifications
EMAIL_USER=notifications@blkoutuk.com
EMAIL_PASS=your_email_password_here
EMAIL_HOST=smtp.your-provider.com
EMAIL_PORT=587

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Grafana Admin Password
GRAFANA_PASSWORD=your_secure_grafana_password_here

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================

# Primary domain
PRIMARY_DOMAIN=blkoutuk.com

# API subdomains
API_DOMAIN=api.blkoutuk.com
IVOR_DOMAIN=ivor.blkoutuk.com
EVENTS_DOMAIN=events.blkoutuk.com
NEWSROOM_DOMAIN=newsroom.blkoutuk.com

# =============================================================================
# SSL CONFIGURATION
# =============================================================================

# SSL Certificate paths (if using custom certificates)
SSL_CERT_PATH=/etc/ssl/certs/blkoutuk.com.crt
SSL_KEY_PATH=/etc/ssl/private/blkoutuk.com.key
SSL_CHAIN_PATH=/etc/ssl/certs/blkoutuk.com.chain.crt

# Let's Encrypt email for automatic SSL
LETSENCRYPT_EMAIL=admin@blkoutuk.com

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# S3 Compatible storage for backups
BACKUP_S3_BUCKET=blkout-backups
BACKUP_S3_ACCESS_KEY=your_s3_access_key
BACKUP_S3_SECRET_KEY=your_s3_secret_key
BACKUP_S3_ENDPOINT=s3.amazonaws.com
BACKUP_S3_REGION=eu-west-1

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900

# CORS origins (production domains)
CORS_ORIGINS=https://blkoutuk.com,https://www.blkoutuk.com,https://ivor.blkoutuk.com,https://events.blkoutuk.com,https://newsroom.blkoutuk.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_ANALYTICS=true
ENABLE_CACHING=true
ENABLE_MONITORING=true

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Worker processes
UVICORN_WORKERS=2
NODE_WORKERS=2

# Memory limits
IVOR_MEMORY_LIMIT=1G
EVENTS_MEMORY_LIMIT=512M
NEWSROOM_MEMORY_LIMIT=512M

# Cache settings
REDIS_MAX_MEMORY=256mb
REDIS_MAX_MEMORY_POLICY=allkeys-lru

# =============================================================================
# LOGGING
# =============================================================================

# Log levels
LOG_LEVEL=info
DATABASE_LOG_LEVEL=warning

# Log retention
LOG_RETENTION_DAYS=30

# =============================================================================
# DEVELOPMENT OVERRIDES (Leave empty for production)
# =============================================================================

# Only set these for development/staging environments
# DEBUG=false
# DEVELOPMENT_MODE=false