# BLKOUT Website - Production Environment Variables
# For Vercel deployment

# Application Environment
NODE_ENV=production
VITE_APP_ENV=production

# API Endpoints - Production URLs
VITE_IVOR_API_URL=https://ivor.blkoutuk.com/api
VITE_EVENTS_API_URL=https://events.blkoutuk.com/api
VITE_NEWSROOM_API_URL=https://newsroom.blkoutuk.com/api
VITE_MAGAZINE_API_URL=https://magazine.blkoutuk.com/api

# Production Features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Security Configuration
VITE_ENABLE_CSP=true
VITE_ALLOWED_ORIGINS=https://blkoutuk.com,https://www.blkoutuk.com,https://blkout-website.vercel.app

# Analytics (placeholder - replace with actual IDs)
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_HOTJAR_ID=XXXXXXX
VITE_SENTRY_DSN=https://xxxxxxxxx@sentry.io/xxxxxxx

# Feature Flags
VITE_ENABLE_IVOR_CHAT=true
VITE_ENABLE_LIBERATION_QUIZ=true
VITE_ENABLE_EVENTS_CALENDAR=true
VITE_ENABLE_LIVE_STORIES=true

# Build Optimization
VITE_BUILD_OPTIMIZATION=true
VITE_COMPRESSION=true