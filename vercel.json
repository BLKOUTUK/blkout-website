{
  "name": "blkout-governance",
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": null,
  "installCommand": "npm install --omit=optional",
  "functions": {
    "api/events.js": {
      "memory": 1024
    },
    "api/articles.js": {
      "memory": 1024
    },
    "api/webhooks/n8n-events.js": {
      "memory": 512
    },
    "api/webhooks/n8n-newsroom.js": {
      "memory": 512
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/downloads/(.*)",
      "destination": "/downloads/$1"
    },
    {
      "source": "/extension-download.html",
      "destination": "/extension-download.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}