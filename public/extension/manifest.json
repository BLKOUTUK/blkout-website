{
  "manifest_version": 3,
  "name": "BLKOUT Community Reporter",
  "version": "1.0.0",
  "description": "Report REAL community events and victories directly to BLKOUT newsroom",
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  
  "host_permissions": [
    "https://blkout.vercel.app/*",
    "https://blkoutuk.com/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Submit Story to BLKOUT",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}