{
  "name": "blkoutnxt-platform",
  "version": "1.0.0",
  "description": "BLKOUT Community Liberation Platform - Federated Independence Architecture",
  "main": "src/main.tsx",
  "scripts": {
    "dev": "vite --port 3000",
    "build": "vite build",
    "preview": "vite preview",
    "start": "vite preview --port 4173",
    "deploy": "npm run build && vercel --prod",
    "deploy:staging": "npm run build && vercel --alias=blkoutnxt-staging",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:independence": "vitest run tests/independence.test.ts",
    "performance:test": "vitest run --reporter=verbose tests/independence.test.ts",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@vercel/node": "^3.0.21",
    "framer-motion": "^12.23.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "vite": "^4.1.0",
    "@vitejs/plugin-react": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "terser": "^5.44.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": "20.x"
  },
  "keywords": [
    "community-platform",
    "federated-architecture",
    "independent-modules",
    "graceful-degradation",
    "democratic-governance",
    "black-queer-liberation",
    "circuit-breaker",
    "performance-monitoring"
  ],
  "author": "BLKOUT Community",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/BLKOUTUK/blkoutnxt-platform.git"
  },
  "homepage": "https://blkoutnxt.vercel.app"
}
